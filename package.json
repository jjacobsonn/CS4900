{
  "name": "vellum-monorepo",
  "private": true,
  "version": "0.1.0",
  "workspaces": [
    "frontend",
    "backend"
  ],
  "scripts": {
    "install:all": "npm install --workspaces",
    "init-db": "psql -U postgres -d postgres -f database/setup.sql",
    "dev": "concurrently \"npm run dev -w backend\" \"npm run dev -w frontend\"",
    "start": "concurrently \"npm run start -w backend\" \"npm run dev -w frontend\"",
    "dev:backend": "npm run dev -w backend",
    "dev:frontend": "npm run dev -w frontend",
    "test": "npm run test -w backend && npm run test -w frontend",
    "test:backend": "npm run test -w backend",
    "test:frontend": "npm run test -w frontend",
    "build": "npm run build -w frontend",
    "build:frontend": "npm run build -w frontend",
    "start:backend": "npm run start -w backend"
  },
  "devDependencies": {
    "concurrently": "^9.2.1"
  }
}
